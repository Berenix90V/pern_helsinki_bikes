{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules"
  ]
}